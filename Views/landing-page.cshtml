@{
    ViewData["Title"] = "FPT FINTERN Landing Page";
}

<div class="hero-banner">
    <img src="/assets//img/event/landing-page-banner.jpg" alt="FPT Danang Campus" />
</div>

<section class="section">
    <div class="container">
        <div class="flex-row">
            <div class="col-half">
                <div class="section-subtitle">ABOUT THIS INTERNSHIP</div>
                <h2 class="section-title">
                    Get into a Professional Career!
                    <span class="highlight">
                        FINTERN
                        <svg class="highlight-underline" width="328" height="10" viewBox="0 0 328 31" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M2 29C110 8.62517 326 -19.8996 326 29" stroke="url(#paint0_linear_47_128)" stroke-width="4" stroke-linecap="round" stroke-linejoin="round"></path>
                            <defs>
                                <linearGradient id="paint0_linear_47_128" x1="2.50784" y1="22.0412" x2="322.486" y2="65.0473" gradientUnits="userSpaceOnUse">
                                    <stop offset="1" stop-color="#F7426F" />
                                    <stop offset="1" stop-color="#F87A58" />
                                </linearGradient>
                            </defs>
                        </svg>
                    </span>
                </h2>
                <h4 class="about-subtitle">
                    Cơ hội để phát triển bản thân, nâng cao kỹ năng và tạo nền tảng vững chắc cho sự nghiệp
                </h4>
                <p class="about-description">
                    FIntern là chương trình thực tập dành cho sinh viên FPT University, giúp bạn tiếp cận môi trường làm việc chuyên nghiệp, rèn luyện kỹ năng và có cơ hội trở thành nhân viên chính thức tại FPT Software.
                </p>
                <a href="/recruitment/recruitments" class="btn btn-primary">
                    Join Now
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="m9 18 6-6-6-6"></path>
                    </svg>
                </a>
            </div>
            <div class="col-half">
                <div class="image-wrapper">
                    <img src="/assets/img/event/event-paracel6.png" alt="FPT Event" class="image-main" />
                    <img src="/assets/img/event/event_paracel3.jpg" alt="FPT Event" class="image-secondary" />
                    <a href="#" class="video-btn" id="videoBtn">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <polygon points="5 3 19 12 5 21 5 3"></polygon>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="section bg-gray">
    <div class="container">
        <h2 class="section-title text-center">Our Events</h2>
        <div class="carousel-container">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/assets/img/event/event_paracel1.jpg" alt="FPT Event" />
                </div>
                <div class="carousel-item">
                    <img src="/assets/img/event/event_paracel2.jpg" alt="FPT Event" />
                </div>
                <div class="carousel-item">
                    <img src="/assets/img/event/event_paracel5.png" alt="FPT Event" />
                </div>
            </div>
            <div class="carousel-indicators">
                <button class="carousel-indicator active" data-slide="0"></button>
                <button class="carousel-indicator" data-slide="1"></button>
                <button class="carousel-indicator" data-slide="2"></button>
            </div>
            <button class="carousel-control carousel-control-prev">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="m15 18-6-6 6-6"></path>
                </svg>
            </button>
            <button class="carousel-control carousel-control-next">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="m9 18 6-6-6-6"></path>
                </svg>
            </button>
        </div>
    </div>
</section>

